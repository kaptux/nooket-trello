{
  "compilerOptions": {
    "rootDirs": ["src", "stories"],
    "baseUrl": "src",
    "outDir": "./lib",
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "removeComments": true,
    "declaration": false,
    "sourceMap": true,
    "jsx": "react",
    "typeRoots": ["index.d.ts", "node_modules/@types"]
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules", "lib", "scripts"]
}
